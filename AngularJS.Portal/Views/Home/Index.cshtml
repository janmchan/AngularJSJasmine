<!DOCTYPE html>
<html ng-app="AngularJSApp" ng-controller="LandingPageController">
<head>
    <title>Angular Dota</title>
    
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Dota 2 Wiki</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#about">About</a></li>
                </ul>
            </div><!--/.nav-collapse -->
            
            <!-- Content starts here -->
            

        </div>
      
    </nav>

    <div class="container">

        <div class="starter-template" ng-controller="HeroDetailsController as hero">
            <label>Hero</label>
            <input type="text" />
            <article id="heroInfo">
                <p class="col-lg-12 text-center">
                    <label id="name">{{models.name}}</label>
                </p>
                
                <p class="col-lg-12 text-center">
                    <img id="heroImage" ng-src="{{models.image}}" />
                </p>
                <div class="col-lg-12 centered-pills">
                    <ul class="nav nav-pills">
                        <li ng-class="{ active: hero.isSelected(1) }">
                            <a href="#" ng-click="hero.selectTab(1)">OVERVIEW</a>
                        </li>
                        <li ng-class="{ active: hero.isSelected(2) }">
                            <a href="#" ng-click="hero.selectTab(2)">BIO</a>
                        </li>
                        <li ng-class="{ active: hero.isSelected(3) }">
                            <a href="#" ng-click="hero.selectTab(3)">ABILITIES</a>
                        </li>
                    </ul>
                </div>
</article> 
            <article id="heroOverview" ng-show="hero.isSelected(1)">
                {{ models.overview }}
            </article>
            <article id="heroBio" ng-show="hero.isSelected(2)">
                {{ models.bio }}
            </article>
            <article id="heroAbilities" ng-show="hero.isSelected(3)">
                {{ models.abilities }}
                </article>
            <p class="bg-warning">Hero not found.</p>
        </div>

    </div><!-- /.container -->





    <script src="~/Scripts/angularjs/angular.min.js"></script>
    <script src="~/Scripts/angularjs/angular-route.min.js"></script>
    @Scripts.Render("~/bundles/jquery");
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/AngularJSApp")
</body>
</html>