@{
    ViewBag.Title = "Hero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="starter-template" ng-controller="HeroDetailsController as hero">
    <article id="heroInfo">
        <p class="col-lg-12 text-center">
            <label id="name">{{models.name}}</label>
        </p>

        <p class="col-lg-12 text-center">
            <img id="heroImage" ng-src="{{models.image}}" />
        </p>
        <div class="col-lg-12 centered-pills">
            <ul class="nav nav-pills">
                <li ng-class="{ active: hero.isSelected(1) }">
                    <a href="#" ng-click="hero.selectTab(1)">OVERVIEW</a>
                </li>
                <li ng-class="{ active: hero.isSelected(2) }">
                    <a href="#" ng-click="hero.selectTab(2)">BIO</a>
                </li>
                <li ng-class="{ active: hero.isSelected(3) }">
                    <a href="#" ng-click="hero.selectTab(3)">ABILITIES</a>
                </li>
            </ul>
        </div>
    </article>
    <article id="heroOverview" ng-show="hero.isSelected(1)">
        {{ models.overview }}
    </article>
    <article id="heroBio" ng-show="hero.isSelected(2)">
        {{ models.bio }}
    </article>
    <article id="heroAbilities" ng-show="hero.isSelected(3)">
        {{ models.abilities }}
    </article>
    <p class="bg-warning">Hero not found.</p>
</div>

